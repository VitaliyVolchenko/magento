<?xml version="1.0"?>
<config>
    <modules>
        <Luxinten_Comment>
            <version>0.1.0</version>
        </Luxinten_Comment>
    </modules>

    <frontend>
        <routers>
            <comment>
                <use>standard</use>
                <args>
                    <module>Luxinten_Comment</module>
                    <frontName>comment</frontName>
                </args>
            </comment>
        </routers>
        <layout>
            <updates>
                <Luxinten_Comment>
                    <file>comment.xml</file>
                </Luxinten_Comment>
            </updates>
        </layout>
    </frontend>

    <global>
        <models>
            <comment>
                <class>Luxinten_Comment_Model</class>
                <resourceModel>comment_resource</resourceModel>
            </comment>
            <comment_resource>
                <class>Luxinten_Comment_Model_Resource</class>
                <entities>
                    <comment>
                        <table>comment</table>
                    </comment>
                </entities>
            </comment_resource>
        </models>

        <resources>
            <comment_setup>
                <setup>
                    <module>Luxinten_Comment</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </comment_setup>
            <comment_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </comment_write>
            <comment_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </comment_read>
        </resources>

        <blocks>
            <comment>
                <class>Luxinten_Comment_Block</class>
            </comment>
        </blocks>
        <helpers>
            <comment>
                <class>Luxinten_Comment_Helper</class>
            </comment>
        </helpers>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <comment>
                    <file>comment.xml</file>
                </comment>
            </updates>
        </layout>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <comment before="Mage_Adminhtml">Luxinten_Comment_Adminhtml</comment>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

</config>